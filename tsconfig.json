{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs", 
    "rootDir": "./",                       
    "baseUrl": "./src",
    "outDir": "./dist",                             
    "paths": {
         "@modules/*": ["modules/*"],
         "@shared/*": ["shared/*"],
         "@config/*": ["config/*"]
     },  
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true ,       
    "resolveJsonModule": true
  }
}
